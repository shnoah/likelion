<!--contents -->

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8  r_size">
       <% @posts.each do |p| %>
       
       <div class="row">           
       <!--이미지 -->
           
            <div class="col-md-8" style="display: inline-block;text-align: center;">
           
                 <img class="img-responsive" src="<%= p.my_image.url %>">
           
            </div>
            <div class="col-md-4"> <!--본문 및 리플 -->
           
            제목 : <h3><%=p.post_title%></h3><br>
           
                 <font style="font-size:11pt"><strong><font color=#125688><%= p.post_name%></font></strong> 
           
                 <%= p.created_at.strftime("%d %b. %Y") %><br><%= p.post_content %></font>
                 <!-- UTC 기준임. 한국시간으로 바꿔주세요ㅠㅠ -->
                
              <hr>
<!-- 리플 출력 부분-->
                 <% p. replies.each do |r| %>                     
                     <h5>- <%= r.content %></h5>
                <%end %>  
              
            </div>
            
          
       </div>

       <div class="row">
          <div class="col-md-8" style="display: inline-block;text-align: right;">
               <a href="/kanu/modify/<%=p.id%>">Edit</a>
                <a href="/kanu/delete/<%=p.id%>">Del</a>
          </div>
           <div class="col-md-3"> <!--리플 입력 폼 -->
                 <form action="kanu/write_reply" method="POST">
                <input type=hidden name="post_id" value="<%=p.id%>">
                <input class="form-control input-sm" type=text name="myreply">
            </div>
            <div class="col-md-1">
                <input class="btn btn-default btn-sm" type=submit value="reply">
            </div>
                </form>   
            
        </div>
       <% end %>

<!--table end-->
</div>


<div class="col-md-2"></div>
    
</div>   



 <!-- board footer -->

<div class="row" >
    <div class="col-md-2"></div>
    <div class="col-md-8"><br>더 이상 글이 없습니다. </div>
    <div class="col-md-2"></div>
    
</div>   
